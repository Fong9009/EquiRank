# EquiRank Environment Variables
# Copy this file to .env.local and fill in your actual values

# APPLICATION CONFIGURATION
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=EquiRank
NEXT_PUBLIC_APP_URL=http://localhost:3000

# DATABASE CONFIGURATION
DB_HOST=localhost
DB_USER=equirank_user
DB_PASSWORD=your_database_password
DB_NAME=equirank
DB_PORT=3306
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000
DB_BACKOFF_MULTIPLIER=2
DB_HEALTH_CHECK_INTERVAL=30000

# DATABASE SSL CONFIGURATION (Production)
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# DATABASE BACKUP CONFIGURATION
DB_BACKUP_ENABLED=false
DB_BACKUP_DIR=./backups
DB_MAX_BACKUPS=10
DB_BACKUP_INTERVAL=86400000
DB_COMPRESS_BACKUPS=true
DB_BACKUP_RETENTION_DAYS=30

# NEXT-AUTH CONFIGURATION
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here_min_32_chars

# SECURITY CONFIGURATION
JWT_SECRET=your_jwt_secret_key
BCRYPT_SALT_ROUNDS=12

# EMAIL CONFIGURATION (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_email_password
SMTP_FROM=noreply@equirank.com
SMTP_REPLY_TO=support@equirank.com

# RECAPTCHA CONFIGURATION
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here